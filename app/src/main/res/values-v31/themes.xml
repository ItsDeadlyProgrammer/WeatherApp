<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WeatherApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Native splash background -->
        <item name="android:windowSplashScreenBackground">@color/white</item>

        <!-- Splash icon (must be in drawable as XML or PNG) -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash</item>

        <!-- Optional: Background for the icon circle -->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/purple_200</item>

        <!-- Keep status bar visible -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>